<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background">#ff303030</color>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:alertDialogTheme">@style/CustomAlertDialog</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/CustomAnimation</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    <style name="CustomAnimation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>
